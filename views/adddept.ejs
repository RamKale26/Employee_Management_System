

 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Department</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      margin: 0;
      background: linear-gradient(135deg, #141e30, #243b55);
      font-family: "Segoe UI", sans-serif;
    }

    .page-wrapper {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .dept-card {
      width: 100%;
      max-width: 440px;
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 45px rgba(0,0,0,0.4);
      overflow: hidden;
      animation: slideUp 0.6s ease;
    }

    @keyframes slideUp {
      from { transform: translateY(40px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    .dept-header {
      background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
      color: white;
      padding: 20px;
      font-size: 22px;
      font-weight: bold;
      text-align: center;
    }

    .btn-custom {
      background: linear-gradient(to right, #11998e, #38ef7d);
      color: white;
      font-weight: 600;
      border: none;
    }

    .btn-custom:hover {
      opacity: 0.9;
    }

    .spinner-border {
      width: 1.5rem;
      height: 1.5rem;
      display: none;
    }
  </style>
</head>

<body>

  <!-- ✅ Top Navbar -->
  <%- include("home.ejs") %>

  <div class="page-wrapper">

    <div class="dept-card">

      <div class="dept-header">
        <i class="bi bi-building-add"></i> Add New Department
      </div>

      <div class="card-body p-4">

        <form name="frm" action="/adddept" method="post" onsubmit="return validateForm()">

          <!-- ✅ Department Input -->
          <div class="form-floating mb-4">
            <input 
              type="text" 
              class="form-control" 
              id="deptName" 
              name="name" 
              placeholder="Department Name"
            >
            <label for="deptName">Department Name</label>
            <small class="text-danger" id="errorMsg"></small>
          </div>

          <!-- ✅ Submit Button with Spinner -->
          <div class="d-grid">
            <button type="submit" class="btn btn-custom btn-lg" id="submitBtn">
              <span id="btnText"><i class="bi bi-plus-circle"></i> Add Department</span>
              <span id="loader" class="spinner-border spinner-border-sm"></span>
            </button>
          </div>

          <!-- ✅ Success Message -->
          <% if (typeof msg !== 'undefined' && msg.length != 0) { %>
            <div class="alert alert-success mt-4 text-center shadow-sm">
              <i class="bi bi-check-circle-fill"></i> <%= msg %>
            </div>
          <% } %>

        </form>

      </div>
    </div>
  </div>

  <!-- ✅ Validation + Spinner Script -->
  <script>
    function validateForm() {
      let dept = document.getElementById("deptName").value.trim();
      let error = document.getElementById("errorMsg");
      let loader = document.getElementById("loader");
      let btnText = document.getElementById("btnText");

      if (dept === "") {
        error.innerText = "Department name is required!";
        return false;
      }

      error.innerText = "";
      loader.style.display = "inline-block";
      btnText.innerText = "Processing...";

      return true;
    }
  </script>

</body>
</html>

